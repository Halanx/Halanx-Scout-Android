<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fadeScrollbars="false"
    android:background="@color/colorWhiteBackground"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ForgotPassword">


        <TextView
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:gravity="center"
            android:text="Forgot Password"
            android:textStyle="bold"
            android:textSize="16sp"
            android:fontFamily="@font/montserrat_regular"
            android:textColor="@color/colorPrimary"/>

        <ImageView
            android:layout_width="18dp"
            android:layout_height="58dp"
            android:onClick="backPress"
            android:layout_marginStart="12dp"
            android:layout_alignParentStart="true"
            android:backgroundTint="#EF3939"
            android:src="@drawable/back_arrow_red"/>


        <ImageView
            android:layout_width="97dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:id="@+id/halanx_logo"
            android:layout_below="@+id/toolbar"
            android:src="@drawable/app_logo_welcome" />


        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="72dp"
            android:layout_below="@+id/halanx_logo"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/montserrat_regular"
            android:text="Enter Registered Phone Number"
            android:textSize="14sp"
            android:textStyle="bold" />


        <EditText
            android:id="@+id/phone_number"
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/textView3"
            android:ems="10"
            android:hint="Phone Number"
            android:background="@drawable/edittext_border"
            android:padding="15dp"
            android:textSize="14sp"
            android:layout_marginStart="30dp"
            android:fontFamily="@font/montserrat_regular"
            android:layout_marginEnd="30dp"
            android:inputType="phone" />


        <TextView
            android:id="@+id/textView2"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/phone_number"
            android:layout_marginTop="209dp"
            android:fontFamily="@font/montserrat_regular"
            android:gravity="center"
            android:textColor="#B8B8B8"
            android:textSize="11sp"
            android:text="We will send you OTP via SMS at the above phone number"
            android:textStyle="bold" />


        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="27dp"
            android:layout_below="@+id/textView2"
            android:background="@drawable/button_shape"
            android:fontFamily="@font/montserrat_regular"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="Send OTP"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"
            android:textSize="14sp"
            android:textStyle="bold"
            android:onClick="sentOtp"/>



    </RelativeLayout>


</ScrollView>
