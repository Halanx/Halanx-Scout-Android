<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="7dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/chat_date"
        android:background="@drawable/curved_button"
        android:backgroundTint="@color/colorWhiteBackground"
        android:padding="7dp"
        android:textSize="12sp"
        android:layout_marginBottom="7dp"
        android:fontFamily="@font/montserrat_regular"
        android:text="11 April"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/reciever_layout"
        android:layout_below="@+id/chat_date"
        android:background="@drawable/mssg_rcv_border"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/mssg_rcv_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:text="Hi.. Where are youdsfsdsfg"
            android:gravity="right"
            android:fontFamily="@font/montserrat_regular"
            android:textSize="15sp"
            android:maxWidth="250dp"
            android:paddingTop="10dp"
            android:paddingStart="20dp"
            android:paddingBottom="10dp"
            />

        <TextView
            android:id="@+id/recivied_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:layout_marginTop="10dp"
            android:paddingRight="20dp"
            android:paddingLeft="10dp"
            android:fontFamily="@font/montserrat_regular"
            android:text="12:45 PM" />


    </LinearLayout>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reciever_layout"
        android:layout_alignParentEnd="true"
        android:id="@+id/send_layout"
        android:background="@drawable/mssg_send_border"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/mssg_send_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:fontFamily="@font/montserrat_regular"
            android:text="This is Message sdfsdff saiduf sdify isdufy sd "
            android:gravity="center|right"
            android:maxWidth="250dp"
            android:textSize="15sp"
            android:paddingStart="30dp"
            android:layout_alignParentEnd="true"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/send_time"
            android:layout_alignParentEnd="true"
            android:textSize="10sp"
            android:layout_marginTop="10dp"
            android:paddingRight="20dp"
            android:paddingLeft="10dp"
            android:fontFamily="@font/montserrat_regular"
            android:text="12:45 PM" />





    </LinearLayout>


    <TextView
        android:id="@+id/seen_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/send_layout"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="0dp"
        android:paddingEnd="20dp"
        android:fontFamily="@font/montserrat_regular"
        android:paddingBottom="7dp"
        android:text="SEEN"
        android:textColor="@color/colorTextButtonColor"
        android:textSize="10sp" />





</RelativeLayout>