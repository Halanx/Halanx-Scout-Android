<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".Home.MoveOut.MoveOutActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="false"
        >


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <androidx.cardview.widget.CardView
                android:id="@+id/toolbar_cardview"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                app:cardCornerRadius="8dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/back_button_image_view"
                        android:layout_width="18dp"
                        android:layout_height="58dp"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="12dp"
                        android:src="@drawable/back_arrow" />


                    <TextView
                        android:id="@+id/activity_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:fontFamily="@font/montserrat_regular"
                        android:textSize="17sp"
                        android:text="Move Out"
                        android:textStyle="bold" />


                    <RelativeLayout
                        android:layout_width="58dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true">

                        <ImageView
                            android:layout_width="58dp"
                            android:layout_height="20dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/task_payment" />

                        <TextView
                            android:id="@+id/amount_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:paddingEnd="5dp"
                            android:text=""
                            android:textColor="@color/colorWhite"
                            android:textSize="11sp" />

                    </RelativeLayout>


                </RelativeLayout>


            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/timeline_cardview"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:layout_below="@+id/toolbar_cardview"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp">

                <com.github.vipulasri.timelineview.TimelineView
                    android:id="@+id/timeline"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="63dp"
                    app:marker="@drawable/marker"
                    app:markerSize="13dp"
                    app:markerInCenter="false"
                    app:lineWidth="2dp"
                    app:lineOrientation="horizontal"
                    app:startLineColor="@color/colorPrimary"
                    app:endLineColor="@color/colorPrimary"/>

            </androidx.cardview.widget.CardView>


            <FrameLayout
                android:id="@+id/frame_layout"
                android:paddingTop="8dp"
                android:layout_below="@id/timeline_cardview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


        </RelativeLayout>


    </ScrollView>


</RelativeLayout>