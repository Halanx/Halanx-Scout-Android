<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ScoutAcceptanceActivity"
    android:background="#F5F5F5"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/im_task"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:src="@drawable/new_task_group"
        />

    <TextView
        android:id="@+id/tv_task"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="New Task"
        android:gravity="center"
        android:textSize="16dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/im_task"
        android:textColor="#8B8B8B"/>


    <TextView
        android:id="@+id/time"
        android:layout_width="212dp"
        android:layout_height="38dp"
        android:text="24 Nov, 12:00PM "
        android:gravity="center"
        android:textSize="16dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_border"
        android:backgroundTint="#7F83FE"
        android:layout_below="@id/tv_task"
        android:textColor="#7F83FE"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        >
    <ImageView
        android:id="@+id/accept_reject_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"

        android:src="@drawable/accept_reject_button" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Swipe Right To Accept"
        android:gravity="center"
        android:textSize="16dp"
        android:layout_below="@id/accept_reject_button"
        android:textColor="#8B8B8B"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp"
            android:layout_marginStart="40dp"
            android:layout_toRightOf="@id/accept_reject_button"
            android:src="@drawable/accept_arrow" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp"
            android:layout_marginEnd="40dp"
            android:layout_toLeftOf="@id/accept_reject_button"
            android:src="@drawable/reject_arrow" />


    </RelativeLayout>
</LinearLayout>