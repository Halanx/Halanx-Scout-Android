<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:contentPaddingBottom="16dp"
    app:cardCornerRadius="8dp"
    android:layout_margin="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Home.Onboarding.fragments.AccommodationTypeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="11dp"
            android:layout_marginTop="11dp"
            android:background="@drawable/red_circle"
            android:gravity="center"
            android:text="04"
            android:textColor="@color/colorWhite"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="11dp"
            android:text="Accommodation Type"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/textView7"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:text="Furnish Type"
            app:layout_constraintStart_toStartOf="@+id/textView7"
            app:layout_constraintTop_toBottomOf="@+id/textView7" />

        <TextView
            android:id="@+id/fully_furnished_tv"
            android:layout_width="134dp"
            android:layout_height="36dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/button_selector"
            android:textColor="@drawable/text_color_selector"
            android:gravity="center"
            android:text="Fully Furnished"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@+id/textView20"
            app:layout_constraintTop_toBottomOf="@+id/textView20" />

        <TextView
            android:id="@+id/semi_furnished_tv"
            android:layout_width="134dp"
            android:layout_height="36dp"
            android:layout_marginStart="20dp"
            android:background="@drawable/button_selector"
            android:gravity="center"
            android:text="Semi Furnished"
            android:textColor="@drawable/text_color_selector"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/fully_furnished_tv"
            app:layout_constraintTop_toTopOf="@+id/fully_furnished_tv" />

        <TextView
            android:id="@+id/unfurnished_tv"
            android:layout_width="134dp"
            android:layout_height="36dp"
            android:layout_marginTop="13dp"
            android:background="@drawable/button_selector"
            android:gravity="center"
            android:text="UnfFurnished"
            android:textColor="@drawable/text_color_selector"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@+id/fully_furnished_tv"
            app:layout_constraintTop_toBottomOf="@+id/fully_furnished_tv" />

        <TextView
            android:id="@+id/textView21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="BHK count"
            app:layout_constraintStart_toStartOf="@+id/unfurnished_tv"
            app:layout_constraintTop_toBottomOf="@+id/unfurnished_tv" />

        <TextView
            android:id="@+id/bhk_1_tv"
            android:layout_width="59dp"
            android:layout_height="36dp"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:text="1 BHK"
            android:textSize="12sp"
            android:background="@drawable/button_selector"
            android:textColor="@drawable/text_color_selector"
            app:layout_constraintStart_toStartOf="@+id/textView21"
            app:layout_constraintTop_toBottomOf="@+id/textView21" />

        <TextView
            android:id="@+id/bhk_2_tv"
            android:layout_width="59dp"
            android:layout_height="36dp"
            android:layout_marginStart="16dp"
            android:background="@drawable/button_selector"
            android:gravity="center"
            android:text="2 BHK"
            android:textSize="12sp"
            android:textColor="@drawable/text_color_selector"
            app:layout_constraintBottom_toBottomOf="@+id/bhk_1_tv"
            app:layout_constraintStart_toEndOf="@+id/bhk_1_tv"
            app:layout_constraintTop_toTopOf="@+id/bhk_1_tv" />

        <TextView
            android:id="@+id/bhk_3_tv"
            android:layout_width="59dp"
            android:layout_height="36dp"
            android:layout_marginStart="16dp"
            android:background="@drawable/button_selector"
            android:gravity="center"
            android:text="3 BHK"
            android:textSize="12sp"
            android:textColor="@drawable/text_color_selector"
            app:layout_constraintBottom_toBottomOf="@+id/bhk_2_tv"
            app:layout_constraintStart_toEndOf="@+id/bhk_2_tv"
            app:layout_constraintTop_toTopOf="@+id/bhk_2_tv" />

        <EditText
            android:id="@+id/bhk_other_et"
            android:layout_width="59dp"
            android:layout_height="36dp"
            android:layout_marginStart="16dp"
            android:background="@drawable/edittext_border"
            android:gravity="center"
            android:hint="Other"
            android:inputType="number"
            android:maxLength="2"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/bhk_3_tv"
            app:layout_constraintStart_toEndOf="@+id/bhk_3_tv"
            app:layout_constraintTop_toTopOf="@+id/bhk_3_tv" />

        <TextView
            android:id="@+id/textView25"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Accommodation Type"
            app:layout_constraintStart_toStartOf="@+id/bhk_1_tv"
            app:layout_constraintTop_toBottomOf="@+id/bhk_1_tv" />

        <TextView
            android:id="@+id/share_room_tv"
            android:layout_width="134dp"
            android:layout_height="36dp"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:text="Shared Room"
            android:textSize="12sp"
            android:background="@drawable/button_selector"
            android:textColor="@drawable/text_color_selector"
            app:layout_constraintStart_toStartOf="@+id/textView25"
            app:layout_constraintTop_toBottomOf="@+id/textView25" />

        <TextView
            android:id="@+id/private_room_tv"
            android:layout_width="134dp"
            android:layout_height="36dp"
            android:gravity="center"
            android:layout_marginStart="16dp"
            android:text="Private Room"
            android:textSize="12sp"
            android:background="@drawable/button_selector"
            android:textColor="@drawable/text_color_selector"
            app:layout_constraintBottom_toBottomOf="@+id/share_room_tv"
            app:layout_constraintStart_toEndOf="@+id/share_room_tv"
            app:layout_constraintTop_toTopOf="@+id/share_room_tv" />

        <TextView
            android:id="@+id/entire_house_tv"
            android:layout_width="134dp"
            android:layout_height="36dp"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:text="Entire House"
            android:textSize="12sp"
            android:background="@drawable/button_selector"
            android:textColor="@drawable/text_color_selector"
            app:layout_constraintStart_toStartOf="@+id/share_room_tv"
            app:layout_constraintTop_toBottomOf="@+id/share_room_tv" />

        <Button
            android:id="@+id/submit_button"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@drawable/button_shape"
            android:layout_marginStart="8dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="8dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:text="Submit"
            android:textColor="@color/colorWhite"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/entire_house_tv" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>