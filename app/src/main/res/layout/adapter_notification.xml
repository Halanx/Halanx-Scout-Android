<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lin_layout"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp">



        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/notification_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/notification_icon_group"
            android:scaleType="centerCrop" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginStart="10dp"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/notification_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textColor="#707070"
                android:fontFamily="@font/montserrat_regular"
                android:textStyle="bold"
                android:text="Rs. Credited in your Bank Accoount"/>
            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/notification_content"
                android:textColor="#B8B8B8"
                android:fontFamily="@font/montserrat_regular"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:textSize="11sp"
                android:text="12:09 PM"/>

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:layout_below="@id/notification_content"
                android:textColor="#B8B8B8"
                android:fontFamily="@font/montserrat_regular"
                android:textStyle="bold"
                android:textSize="11sp"
                android:layout_marginTop="5dp"
                android:text="25 May 2019"/>
        </RelativeLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/lin_layout"
        android:background="@color/colorCardBackground" />

</RelativeLayout>
