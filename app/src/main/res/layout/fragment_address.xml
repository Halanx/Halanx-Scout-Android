<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Home.MoveOut.fragment.PropertyDetailsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/screen_type_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="1dp"
            android:orientation="horizontal">




            <TextView
                android:layout_width="22dp"
                android:layout_height="match_parent"
                android:text="01"
                android:gravity="center"
                android:background="@drawable/red_circle"
                android:textColor="@color/colorWhite" />




            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="Property Details"
                android:textSize="16sp"
                android:textStyle="bold" />


        </LinearLayout>






        <TextView
            android:id="@+id/location_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_margin="20dp"
            android:text="Enter the location"
            android:drawablePadding="8dp"
            android:paddingStart="8dp"
            android:background="@drawable/edittext_border"
            android:gravity="center_vertical"
            android:layout_gravity="center_horizontal"
            android:textSize="14sp"
            />






        <RelativeLayout
            android:id="@+id/checkLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp">

            <CheckBox
                android:id="@+id/checkBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_regular"
                android:layout_toEndOf="@+id/checkBox"
                android:layout_marginStart="10dp"
                android:text="Click here to ensure you that you have checked the property &amp; tenant Details."
                android:textSize="14sp"
                android:textStyle="bold" />


        </RelativeLayout>





        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="69dp"
            android:layout_marginBottom="25dp">

            <TextView
                android:id="@+id/cancel_action"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_regular"
                android:onClick="cancelTask"
                android:text="CANCEL TASK"
                android:layout_centerVertical="true"
                android:textColor="#707070"
                android:textSize="12sp"
                android:textStyle="bold" />


            <Button
                android:id="@+id/done_button"
                android:layout_width="170dp"
                android:layout_height="40dp"
                android:background="@drawable/button_shape_dark_grey"
                android:enabled="false"
                android:fontFamily="@font/montserrat_regular"
                android:layout_toEndOf="@+id/cancel_action"
                android:layout_marginStart="66dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="NEXT"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textSize="12sp"
                android:textStyle="bold" />

        </RelativeLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>