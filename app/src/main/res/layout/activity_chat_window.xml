<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".Home.ChatWindow">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:id="@+id/toolbar_layout"
        android:elevation="2dp"
        android:background="@color/colorWhite">


        <TextView
            android:id="@+id/name_tv"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:fontFamily="@font/montserrat_regular"
            android:gravity="center"
            android:textSize="17sp"
            android:textStyle="bold"/>

        <ImageView
            android:layout_width="18dp"
            android:layout_height="58dp"
            android:id="@+id/back_arrow"
            android:onClick="backPress"
            android:layout_marginStart="21dp"
            android:layout_alignParentStart="true"
            android:src="@drawable/back_arrow"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/customer_img"
            android:layout_width="45dp"
            android:layout_height="46dp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="12dp"
            android:onClick="profileImage"
            android:layout_toRightOf="@+id/back_arrow"
            android:scaleType="centerCrop" />


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="callCustomr"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:padding="5dp">

            <ImageView
                android:id="@+id/call_icon"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:visibility="gone"
                android:src="@drawable/call_icon_group" />

        </RelativeLayout>

    </RelativeLayout>







    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_chat"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar_layout"
        android:layout_above="@id/rl_send_mssg"
        android:layout_margin="7dp">

    </androidx.recyclerview.widget.RecyclerView>


    <RelativeLayout
        android:id="@+id/rl_send_mssg"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/chat_send_border"
        android:layout_margin="7dp"
        >

        <EditText
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:id="@+id/chat_text"
            android:layout_marginStart="20dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp"
            android:fontFamily="@font/montserrat_regular"
            android:background="@android:color/transparent"/>


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/send_button"
            android:text="SEND"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:textColor="@color/colorWhite"
            android:fontFamily="@font/montserrat_regular"
            android:textStyle="bold"
            android:onClick="sendText"
            android:backgroundTint="@color/colorTextButtonColor"
            android:background="@drawable/button_shape"
            android:layout_alignParentEnd="true"/>

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progress_bar"
            android:layout_marginEnd="40dp"
            android:visibility="gone"
            style="?android:attr/progressBarStyleSmallTitle"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"/>


    </RelativeLayout>
    

</RelativeLayout>