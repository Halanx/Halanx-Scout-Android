<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:layout_margin="10dp"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <android.support.v7.widget.CardView android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_margin="10dp"
        app:cardCornerRadius="5dp"
        app:cardBackgroundColor="@color/colorWhite"
        android:layout_marginBottom="100dp"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android">


        <LinearLayout
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            tools:context=".Profile.WorkAddressActivity"
            android:orientation="vertical">

            <!-- TODO: Update blank fragment layout -->


            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <EditText
                    android:id="@+id/street_address"
                    android:layout_width="match_parent"
                    android:layout_height="49dp"
                    android:ems="10"
                    android:hint="Street Address"
                    android:textSize="14sp"
                    android:fontFamily="@font/montserrat_regular"
                    android:inputType="text"
                    android:padding="10dp" />


            </android.support.design.widget.TextInputLayout>




            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_marginTop="20dp">

                <EditText
                    android:id="@+id/city"
                    android:layout_width="match_parent"
                    android:layout_height="49dp"
                    android:layout_below="@+id/dsf"
                    android:background="@drawable/edittext_border"
                    android:ems="10"
                    android:fontFamily="@font/montserrat_regular"
                    android:hint="City"
                    android:inputType="text"
                    android:padding="10dp"
                    android:textSize="14sp" />

            </android.support.design.widget.TextInputLayout>



            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_marginTop="20dp">

                <EditText
                    android:id="@+id/state"
                    android:layout_width="match_parent"
                    android:layout_height="49dp"
                    android:background="@drawable/edittext_border"
                    android:ems="10"
                    android:textSize="14sp"
                    android:layout_below="@+id/confirm_account_number"
                    android:fontFamily="@font/montserrat_regular"
                    android:hint="State"
                    android:layout_marginTop="20dp"
                    android:inputType="text"
                    android:padding="10dp" />

            </android.support.design.widget.TextInputLayout>



            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_marginTop="20dp">

                <EditText
                    android:id="@+id/pincode"
                    android:layout_width="match_parent"
                    android:layout_height="49dp"
                    android:background="@drawable/edittext_border"
                    android:ems="10"
                    android:textSize="14sp"
                    android:layout_below="@+id/account_holder_name"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/montserrat_regular"
                    android:hint="Pincode"
                    android:inputType="number"
                    android:padding="10dp" />

            </android.support.design.widget.TextInputLayout>



            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_marginTop="20dp">

                <EditText
                    android:id="@+id/country"
                    android:layout_width="match_parent"
                    android:layout_height="49dp"
                    android:background="@drawable/edittext_border"
                    android:ems="10"
                    android:textSize="14sp"
                    android:layout_below="@+id/ifsc_code"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/montserrat_regular"
                    android:hint="Country"
                    android:inputType="text"
                    android:padding="10dp" />



            </android.support.design.widget.TextInputLayout>








            <Button
                android:id="@+id/button2"
                android:layout_width="192dp"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:background="@drawable/button_shape"
                android:fontFamily="@font/montserrat_regular"
                android:onClick="saveDetails"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="Save"
                android:layout_marginTop="100dp"
                android:textAllCaps="false"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/colorWhite"
                android:textSize="16sp"
                android:textStyle="bold" />







        </LinearLayout>



    </android.support.v7.widget.CardView>


</ScrollView>
