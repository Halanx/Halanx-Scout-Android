<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".Home.MoveOut.RemarkActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <androidx.cardview.widget.CardView
                android:id="@+id/toolbar_cardview"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                app:cardCornerRadius="8dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="58dp"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="12dp"
                        android:onClick="backPress"
                        android:src="@drawable/back_arrow" />


                    <TextView
                        android:id="@+id/activity_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:fontFamily="@font/montserrat_regular"
                        android:textSize="17sp"
                        android:text="Move Out"
                        android:textStyle="bold" />


                    <RelativeLayout
                        android:layout_width="58dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true">

                        <ImageView
                            android:layout_width="58dp"
                            android:layout_height="20dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/task_payment" />

                        <TextView
                            android:id="@+id/amount_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:paddingEnd="5dp"
                            android:text=""
                            android:textColor="@color/colorWhite"
                            android:textSize="11sp" />

                    </RelativeLayout>


                </RelativeLayout>


            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/timeline_cardview"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:layout_below="@+id/toolbar_cardview"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp">


            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/timeline_cardview"
                android:layout_margin="10dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <LinearLayout
                        android:id="@+id/screen_type_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:padding="1dp"
                        android:orientation="horizontal">




                        <TextView
                            android:layout_width="22dp"
                            android:layout_height="match_parent"
                            android:text="03"
                            android:gravity="center"
                            android:background="@drawable/red_circle"
                            android:textColor="@color/colorWhite" />




                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:text="Remark"
                            android:textSize="16sp"
                            android:textColor="#373737"
                            android:textStyle="bold" />


                    </LinearLayout>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#373737"
                        android:text="Remark"
                        android:layout_marginTop="26dp"
                        android:layout_marginStart="26dp" />


                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/remarks"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginTop="6dp"
                        android:padding="10dp"
                        android:lines="5"
                        android:textSize="14sp"
                        android:gravity="top"
                        android:hint="Add your remarks on the basis of your inspectionâ€¦"
                        android:background="@drawable/button_border"/>




                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="69dp"
                        android:layout_marginBottom="25dp">



                        <Button
                            android:id="@+id/done_button"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:background="@drawable/button_shape_dark_grey"
                            android:enabled="false"
                            android:fontFamily="@font/montserrat_regular"
                            android:onClick="submitRemark"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="20dp"
                            android:text="SUBMIT REPORT"
                            android:textAllCaps="false"
                            android:textColor="@color/colorWhite"
                            android:textSize="12sp"
                            android:textStyle="bold" />


                        <TextView
                            android:id="@+id/cancel_action"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat_regular"
                            android:onClick="cancelTask"
                            android:text="CANCEL"
                            android:layout_marginTop="30dp"
                            android:layout_below="@+id/done_button"
                            android:layout_centerHorizontal="true"
                            android:textColor="#707070"
                            android:textSize="12sp"
                            android:textStyle="bold" />


                    </RelativeLayout>

                </LinearLayout>


            </androidx.cardview.widget.CardView>


        </RelativeLayout>


    </ScrollView>


</RelativeLayout>