<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_margin="10dp"
    app:cardCornerRadius="5dp"
    app:cardBackgroundColor="@color/colorWhite"
    android:layout_marginBottom="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".WalletFragment"
        android:background="@color/colorWhite"
        android:layout_margin="10dp">

        <!-- TODO: Update blank fragment layout -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="126dp"
            android:id="@+id/rel_layout"
            android:background="@drawable/earning_background">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView"
                    android:text="Total Earning"
                    android:textColor="@color/colorWhite"
                    android:textStyle="bold"
                    android:fontFamily="@font/montserrat_regular"
                    android:textSize="20dp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/earning"
                    android:text="₹ 10000"
                    android:paddingTop="10dp"
                    android:textColor="@color/colorWhite"
                    android:fontFamily="@font/montserrat_regular"
                    android:textSize="60sp" />


            </RelativeLayout>

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/rel_layout">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="126dp"
                android:layout_weight="0.5"
                android:layout_marginEnd="10dp"
                android:background="@drawable/paid_background">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView2"
                        android:text="Total Earning"
                        android:textColor="@color/colorWhite"
                        android:textStyle="bold"
                        android:fontFamily="@font/montserrat_regular"
                        android:textSize="15sp" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/paid"
                        android:text="₹ 10000"
                        android:paddingTop="10dp"
                        android:textColor="@color/colorWhite"
                        android:fontFamily="@font/montserrat_regular"
                        android:textSize="30sp" />


                </RelativeLayout>

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_weight="0.5"
                android:layout_height="126dp"
                android:background="@drawable/due_background">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView4"
                        android:text="Total Earning"
                        android:textColor="@color/colorGrey"
                        android:textStyle="bold"
                        android:fontFamily="@font/montserrat_regular"
                        android:textSize="15sp" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/due"
                        android:text="₹ 10000"
                        android:paddingTop="10dp"
                        android:textColor="@color/colorGrey"
                        android:fontFamily="@font/montserrat_regular"
                        android:textSize="30sp" />


                </RelativeLayout>

            </RelativeLayout>


        </LinearLayout>




    </RelativeLayout>


</android.support.v7.widget.CardView>
