<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:layout_marginBottom="100dp"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardBackgroundColor="@color/colorWhite"
    app:cardCornerRadius="11dp">


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        tools:context=".WalletFragment">

        <!-- TODO: Update blank fragment layout -->


        <TextView
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:fontFamily="@font/montserrat_regular"
            android:gravity="center"
            android:text="Earnings"
            android:textSize="17sp"
            android:textStyle="bold" />


        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/toolbar"
            android:background="#D6D6D6" />



        <androidx.cardview.widget.CardView
            android:id="@+id/rel_layout"
            android:layout_width="match_parent"
            android:layout_height="126dp"
            android:layout_below="@+id/view"
            android:layout_marginStart="10dp"
            android:layout_marginTop="21dp"
            android:layout_marginEnd="10dp"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardCornerRadius="13dp">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="126dp"
                android:background="@drawable/earning_background">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true">

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_regular"
                        android:text="Total Earning"
                        android:textColor="@color/colorWhite"
                        android:textSize="20dp"
                        android:textStyle="bold" />


                    <TextView
                        android:id="@+id/textView34"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="10dp"
                        android:text="₹ "
                        android:textColor="@color/colorWhite"
                        android:textSize="60sp" />

                    <TextView
                        android:id="@+id/earning"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/textView34"
                        android:fontFamily="@font/montserrat_regular"
                        android:paddingTop="10dp"
                        android:text=""
                        android:textColor="@color/colorWhite"
                        android:textSize="60sp"
                        android:textStyle="bold" />


                </RelativeLayout>

            </RelativeLayout>


        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rel_layout"
            android:background="@color/colorWhite"
            android:orientation="horizontal"
            android:paddingTop="21dp"
            android:paddingBottom="10dp"
            android:weightSum="1">

            <androidx.cardview.widget.CardView
                android:id="@+id/rel_layout2"
                android:layout_width="match_parent"
                android:layout_height="126dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="1dp"
                android:layout_weight="0.5"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="13dp">


                <RelativeLayout
                    android:id="@+id/earning_layout"
                    android:layout_width="match_parent"
                    android:layout_height="126dp"
                    android:background="@drawable/paid_background">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat_regular"
                            android:text="Paid"
                            android:textColor="@color/colorWhite"
                            android:textSize="15dp"
                            android:textStyle="bold" />


                        <TextView
                            android:id="@+id/textView35"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="10dp"
                            android:text="₹ "
                            android:textColor="@color/colorWhite"
                            android:textSize="30sp" />


                        <TextView
                            android:id="@+id/paid"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@+id/textView35"
                            android:fontFamily="@font/montserrat_regular"
                            android:paddingTop="10dp"
                            android:text=""
                            android:textColor="@color/colorWhite"
                            android:textSize="30sp"
                            android:textStyle="bold" />


                    </RelativeLayout>

                </RelativeLayout>


            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/rel_layout3"
                android:layout_width="match_parent"
                android:layout_height="126dp"
                android:layout_marginStart="1dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="1dp"
                android:layout_weight="0.5"
                app:cardCornerRadius="13dp">


                <RelativeLayout
                    android:id="@+id/due_layout"
                    android:layout_width="match_parent"
                    android:layout_height="126dp"
                    android:background="@drawable/due_background">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat_regular"
                            android:text="Due"
                            android:textColor="@color/colorGrey"
                            android:textSize="15dp"
                            android:textStyle="bold" />


                        <TextView
                            android:id="@+id/textView36"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="0dp"
                            android:paddingTop="10dp"
                            android:text="₹ "
                            android:textColor="@color/colorGrey"
                            android:textSize="30sp" />

                        <TextView
                            android:id="@+id/due"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="0dp"
                            android:layout_toEndOf="@+id/textView36"
                            android:fontFamily="@font/montserrat_regular"
                            android:paddingTop="10dp"
                            android:text=""
                            android:textColor="@color/colorGrey"
                            android:textSize="30sp"
                            android:textStyle="bold" />


                    </RelativeLayout>

                </RelativeLayout>


            </androidx.cardview.widget.CardView>


        </LinearLayout>



    </RelativeLayout>


</androidx.cardview.widget.CardView>
