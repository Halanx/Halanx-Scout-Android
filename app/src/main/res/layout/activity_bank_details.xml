<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <androidx.cardview.widget.CardView android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="11dp"
        android:layout_margin="10dp"
        app:cardBackgroundColor="@color/colorWhite"
        android:layout_marginBottom="100dp"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:fontFamily="@font/montserrat_regular"
                android:gravity="center"
                android:text="Bank Details"
                android:textSize="17sp"
                android:textStyle="bold"/>

            <ImageView
                android:layout_width="18dp"
                android:layout_height="58dp"
                android:onClick="backPress"
                android:layout_marginStart="12dp"
                android:layout_alignParentStart="true"
                android:src="@drawable/back_arrow"/>



            <View
                android:id="@+id/line_view"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/toolbar"
                android:background="#D6D6D6"/>

            <LinearLayout
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_below="@+id/line_view"
                tools:context=".Profile.BankDetailsActivity"
                android:orientation="vertical">

                <!-- TODO: Update blank fragment layout -->


                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <EditText
                        android:id="@+id/account_number"
                        android:layout_width="match_parent"
                        android:layout_height="49dp"
                        android:ems="10"
                        android:hint="Account Number"
                        android:textSize="12sp"
                        android:fontFamily="@font/montserrat_regular"
                        android:inputType="number"
                        android:padding="10dp" />


                </com.google.android.material.textfield.TextInputLayout>




                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_marginTop="20dp">

                    <EditText
                        android:id="@+id/confirm_account_number"
                        android:layout_width="match_parent"
                        android:layout_height="49dp"
                        android:layout_below="@+id/dsf"
                        android:background="@drawable/edittext_border"
                        android:ems="10"
                        android:fontFamily="@font/montserrat_regular"
                        android:hint="Confirm Account Number"
                        android:inputType="number"
                        android:padding="10dp"
                        android:textSize="12sp" />

                </com.google.android.material.textfield.TextInputLayout>



                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_marginTop="20dp">

                    <EditText
                        android:id="@+id/account_holder_name"
                        android:layout_width="match_parent"
                        android:layout_height="49dp"
                        android:background="@drawable/edittext_border"
                        android:ems="10"
                        android:textSize="12sp"
                        android:layout_below="@+id/confirm_account_number"
                        android:fontFamily="@font/montserrat_regular"
                        android:hint="Account Holder's Name"
                        android:layout_marginTop="20dp"
                        android:inputType="text"
                        android:padding="10dp" />

                </com.google.android.material.textfield.TextInputLayout>



                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_marginTop="20dp">

                    <EditText
                        android:id="@+id/ifsc_code"
                        android:layout_width="match_parent"
                        android:layout_height="49dp"
                        android:background="@drawable/edittext_border"
                        android:ems="10"
                        android:textSize="12sp"
                        android:layout_below="@+id/account_holder_name"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/montserrat_regular"
                        android:hint="IFSC Code"
                        android:inputType="text"
                        android:padding="10dp" />

                </com.google.android.material.textfield.TextInputLayout>



                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_marginTop="20dp">

                    <EditText
                        android:id="@+id/bank_name"
                        android:layout_width="match_parent"
                        android:layout_height="49dp"
                        android:background="@drawable/edittext_border"
                        android:ems="10"
                        android:textSize="12sp"
                        android:layout_below="@+id/ifsc_code"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/montserrat_regular"
                        android:hint="Bank Name"
                        android:inputType="text"
                        android:padding="10dp" />



                </com.google.android.material.textfield.TextInputLayout>



                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_marginTop="20dp">


                    <EditText
                        android:id="@+id/bank_branch"
                        android:layout_width="match_parent"
                        android:layout_height="49dp"
                        android:background="@drawable/edittext_border"
                        android:ems="10"
                        android:textSize="12sp"
                        android:layout_below="@+id/bank_name"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/montserrat_regular"
                        android:hint="Bank Branch"
                        android:inputType="text"
                        android:padding="10dp" />


                </com.google.android.material.textfield.TextInputLayout>



                <Button
                    android:id="@+id/button2"
                    android:layout_width="192dp"
                    android:layout_height="40dp"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/button_shape"
                    android:fontFamily="@font/montserrat_regular"
                    android:onClick="saveDetails"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:text="Save"
                    android:layout_marginTop="20dp"
                    android:textAllCaps="false"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/colorWhite"
                    android:textSize="17sp"
                    android:textStyle="bold" />







            </LinearLayout>



        </RelativeLayout>



    </androidx.cardview.widget.CardView>


</ScrollView>
